<!--        SELECT-->
<!--        *-->
<!--        FROM-->
<!--        <include refid="table"/>-->
<!--        WHERE-->
<!--        id = #{id}-->
<!--    </select>-->

    <!-- 增 -->
    <insert id="insertUser" parameterType="com.xiaozhan.demo.Entities.User">
        INSERT INTO
        <include refid="table"/>
        (username,password)
        VALUES
        (#{username},#{password})
    </insert>

    <!-- 改 -->
    <update id="ban" parameterType="int">
        UPDATE
        <include refid="table"/>
        SET
        <!--<if test="name != null">name = #{name}</if>-->
        isbanned  = true
        WHERE
        id = #{id}
    </update>

<!--    &lt;!&ndash; 删 &ndash;&gt;-->
    <delete id="deleteUser" parameterType="int">
        DELETE FROM
        <include refid="table"/>
        WHERE
        id = #{id}
    </delete>
</mapper>