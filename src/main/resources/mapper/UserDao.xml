<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- 这里填写对应的Dao文件所在的路径 -->
<mapper namespace="com.xiaozhan.demo.Dao.IUserDao"    >
    <!-- 填写数据库里实例Person对应的表的表名 -->
    <!-- 这里是作为一个变量使用 -->
    <sql id="table">users</sql>

    <!-- id属性填写Dao文件里的函数名称 xxType是参数或是结果的类型根据情况填写 -->
    <!-- 查询所有   -->
    <select id="findAll" resultType="com.xiaozhan.demo.Entities.User">
        SELECT
        *
        FROM
        <include refid="table" />
    </select>
    <select id="getUserByUserName" resultType="com.xiaozhan.demo.Entities.User">
        SELECT
        *
        FROM
        <include refid="table"/>
        WHERE
        username=#{username}
    </select>
    <select id="getBannedUser" resultType="com.xiaozhan.demo.Entities.User">
        SELECT
        *
        FROM
        <include refid="table"/>
        WHERE
        isbanned = 1;
    </select>
<!--    &lt;!&ndash; 根据id查询 &ndash;&gt;-->
