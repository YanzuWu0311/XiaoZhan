<!-- 这里填写对应的Dao文件所在的路径 -->
<mapper namespace="com.xiaozhan.demo.Dao.IAdminDao"    >
    <!-- 填写数据库里实例Person对应的表的表名 -->
    <!-- 这里是作为一个变量使用 -->
    <sql id="table">Admin</sql>

    <!-- id属性填写Dao文件里的函数名称 xxType是参数或是结果的类型根据情况填写 -->
    <!-- 查询所有   -->
    <select id="findAll" resultType="com.xiaozhan.demo.Entities.Admin">
        SELECT
        *
        FROM
        <include refid="table" />
    </select>
    <select id="getAdminByUserName" resultType="com.xiaozhan.demo.Entities.Admin">
        SELECT
        *
        FROM
        <include refid="table"/>
        WHERE
        username=#{username}
